<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title%>

  <%= f.label :content %>
  <%= f.text_field :content %>

  <%= f.label :category_ids, "Categories" %>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>

  <%= f.fields_for :categories, @post.categories.build do |s| %>
    <%= s.text_field :name %>
  <% end %>

  <%= f.submit %>
<% end %>